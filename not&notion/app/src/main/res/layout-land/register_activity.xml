<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <!-- COLUMNA IZQUIERDA: LOGO GRANDE -->
    <LinearLayout
        android:id="@+id/logoColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/logo_icon"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <!-- COLUMNA DERECHA: FORMULARIO CON SCROLL -->
    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toEndOf="@id/logoColumn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="32dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:id="@+id/formColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|start">

            <!-- FILA: NOMBRE + IDIOMA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textSize="18sp"/>

                <ImageButton
                    android:id="@+id/btn_language"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/lng"/>
            </LinearLayout>

            <!-- NOMBRE -->
            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                style="@style/MyEditText"/>

            <!-- EMAIL LABEL -->
            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"/>

            <!-- EMAIL -->
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                style="@style/MyEditText"/>

            <!-- PASSWORD LABEL -->
            <TextView
                android:id="@+id/password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"/>

            <!-- PASSWORD -->
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                style="@style/MyEditText"/>

            <!-- CONFIRM PASSWORD LABEL -->
            <TextView
                android:id="@+id/confirm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"/>

            <!-- CONFIRM PASSWORD -->
            <EditText
                android:id="@+id/confirm_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                style="@style/MyEditText"/>

            <!-- BOTÃ“N REGISTRARSE -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                style="@style/MyButton"
                android:layout_marginTop="24dp"/>

            <!-- IR A LOGIN -->
            <TextView
                android:id="@+id/tv_go_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:layout_marginTop="16dp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
