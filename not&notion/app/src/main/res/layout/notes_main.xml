<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/busquedaBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/buscar"
        android:inputType="text"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/busquedaBarra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/buscar"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Texto de ruta debajo de la barra de búsqueda -->
    <TextView
        android:id="@+id/routeTextShow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/route"
        android:padding="8dp"
        android:textColor="@color/text_button"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/busquedaBarra"
        app:layout_constraintStart_toStartOf="@id/busquedaBarra"
        app:layout_constraintEnd_toEndOf="@id/busquedaBarra"
        android:layout_marginTop="4dp"/>

    <!-- BOTÓN VOLVER ATRÁS -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_return"
        android:contentDescription="@string/desc_return_button"
        app:tint="@android:color/white"
        app:backgroundTint="@color/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>


    <!-- BOTÓN AÑADIR NOTA -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_note"
        app:tint="@android:color/white"
        app:backgroundTint="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/routeTextShow"
        app:layout_constraintStart_toStartOf="@id/routeTextShow"
        app:layout_constraintEnd_toEndOf="@id/routeTextShow"
        app:layout_constraintBottom_toTopOf="@id/btnAddNote">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- RecyclerView para carpetas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFolders"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
                <!-- RecyclerView para notas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"/>
            </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
